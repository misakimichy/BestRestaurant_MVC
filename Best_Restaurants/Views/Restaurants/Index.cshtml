@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurant List</h1>

@if (@Model.Count == 0)
{
  <h3>No BestRestaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Description}", "Details", new { id = restaurant.RestaurantId})</li>
}
<p>@Html.ActionLink("Add new restaurant", "Create")</p>